{
  "name": "colloquy",
  "scripts": {
    "dev": "solid-start dev --port 5005",
    "build": "solid-start build",
    "build:svg": "svgr --template scripts/svg-template.cjs --typescript artwork/icons/ -d src/icons/",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "format": "prettier --write ./src",
    "start": "solid-start start",
    "test": "npm run test:format && npm run test:lint && npm run test:compile",
    "test:format": "prettier --check ./src",
    "test:compile": "tsc --noEmit --project ./tsconfig.json",
    "test:lint": "eslint -c .eslintrc.cjs \"src/**/*.ts?(x)\""
  },
  "type": "module",
  "devDependencies": {
    "@svgr/cli": "^6.5.1",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "rimraf": "^3.0.2",
    "solid-start-node": "^0.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.8"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@solidjs/meta": "^0.28.0",
    "@solidjs/router": "^0.5.0",
    "dolmen": "^0.1.0",
    "solid-js": "^1.6.0",
    "solid-start": "^0.2.0",
    "undici": "^5.11.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "engines": {
    "node": ">=16"
  }
}
